<style>
    /* ===== Topbar in frame_footer ===== */
    :root{
      --page-bg:#040B12;   /* 전체 배경 */
      --topbar:#09131A;    /* 상단바 배경 */
      --text:#FAFAFA;      /* 텍스트 */
    }
    /* 상단바 높이만큼 본문 밀기 */
    body{
      margin:0;
      background:var(--page-bg);
      color:var(--text);
      padding-top:50px;
      font-family:system-ui,-apple-system,Segoe UI,Roboto,Pretendard,Apple SD Gothic Neo,Malgun Gothic,sans-serif;
    }
    .main-header{
      position:fixed; top:0; left:0; right:0;
      height:50px;
      background:var(--topbar);
      display:flex; align-items:center; gap:12px;
      padding:0 20px;
      z-index:1000;
    }
    .main-header .logo,
    .main-header .logo-ph{
      width: clamp(18px, 1.2vw, 28px);
      height: clamp(18px, 1.2vw, 28px);
    }
    .main-header .logo{ object-fit:contain; display:block; }
    .main-header .logo-ph{
      display:grid; place-items:center;
      border-radius:6px;
      background:#0F2230;
      color:#8FBBD0;
      font-size: clamp(8px, .8vw, 11px);
      font-weight:700;
      letter-spacing:.5px;
    }
    .main-header .title{
      margin:0;
      font-weight:700;
      font-size: clamp(14px, 1.2vw, 18px);
      letter-spacing:.2px;
      color:var(--text);
    }
</style>

<header class="main-header" role="banner" aria-label="상단 바">
    {{#logoPath}}
        <img src="{{logoPath}}" alt="로고" class="logo"
             onerror="this.style.display='none'; this.nextElementSibling.style.display='grid';">
        <div class="logo-ph" style="display:none">LOGO</div>
    {{/logoPath}}
    {{^logoPath}}
        <div class="logo-ph">LOGO</div>
    {{/logoPath}}

    <h1 class="title">BEMS 제어</h1>
</header>
