<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
</head>

<style>
/* 바탕색 지정 */
    body {
        position: relative;
        margin: 0px;
    }

    #background_canvas {
        background-color: #040B12;
        position: absolute;
        width: 100%;
        height: 100%;
    }
    #contain {
        width: 100%;
        height: 100%;
        background: #040B12;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
    }


/* 로그인 창 */
    .login {
        display: flex;
        width: 500px;
        height: 450px;
        background: #09131A;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        border-radius: 10px;
        gap: 80px;
    }
    .login_input_name{
        display: flex;
        font: bold 60px "나눔고딕";
        color: white;
    }
    .login_input_frame{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: white;
        gap: 5px;
    }
    .login_input_id,
    .login_input_pw {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .login_input_id input,
    .login_input_pw input {
        width: 190px;
        height: 24px;
    }
    .login_input_head {
        display: flex;
        width: 60px;
        height: 24px;

    }
    .login_input_btn {
        width: 250px;
        height: 60px;
        border-radius: 10px;
        background: #00AA6F;
        font: 400 25px "나눔고딕";
        color: #FAFAFA;
        margin: 10px 0px 0px 0px;
    }

</style>

<body>

    <canvas id="background_canvas"></canvas>
    <div id="contain">
        <div class="login">
            <div class="login_input_name">
                BEMS
            </div>
            <div class="login_input_frame">
                <div class="login_input_id">
                    <div class="login_input_head">ID</div>
                    <input type="text" placeholder="아이디 입력">
                </div>
                <div class="login_input_pw">
                    <div class="login_input_head">PW</div>
                    <input type="password" placeholder="비밀번호 입력">
                </div>
                <button class="login_input_btn">LOGIN</button>
            </div>
        </div>
    </div>

</body>
</html>



